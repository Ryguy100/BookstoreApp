@{
}

@model Book 

@* Each individual book card *@
<div class="row">
    <div class="col card">
        <div class="card-body">
            <div class="row">
                <h4 class="card-title mb-0">@Model.Title</h4>
                <p class="card-text"><em>@Model.Author</em></p>
            </div>
            <div class="row mt-2">
                <div class="col-4">
                    <p class="card-text mb-1"><strong>Number of Pages:</strong> @Model.PageCount</p>
                    <p class="card-text mb-1"><strong>Price:</strong> $@Model.Price</p>
                    <p class="card-text mb-1"><strong>Publisher:</strong> @Model.Publisher</p>
                </div>
                <div class="col-4">
                    <p class="card-text mb-1"><strong>ISBN:</strong> @Model.Isbn</p>
                    <p class="card-text mb-1"><strong>Classification/Category:</strong> @Model.Category</p>
                </div>
            </div>
        </div>
    </div>
</div>
